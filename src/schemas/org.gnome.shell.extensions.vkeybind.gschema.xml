<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">
    <schema path="/org/gnome/shell/extensions/vkeybind/" id="org.gnome.shell.extensions.vkeybind">
        <key name="maximize-mode" type="b">
            <default>false</default>
            <summary>Maximize the first opened window.</summary>
            <description>Maximize the first opened window.</description>
        </key>
        <key name="ultra-wide-mode" type="b">
            <default>true</default>
            <summary>Vertically maximize or centers the first window.</summary>
            <description>Vertically maximize or centers the first window.</description>
        </key>
         <key name="grid-tile-mode" type="b">
            <default>false</default>
            <summary>Tile windows in grid.</summary>
            <description>Tile windows in grid.</description>
        </key>
        <key name="window-max-column-tiles" type="u">
            <default>4</default>
            <summary>Maximum columns of tiled windows.</summary>
            <description>Maximum columns of tiled windows.</description>
        </key>
        <key name="window-max-row-tiles" type="u">
            <default>2</default>
            <summary>Maximum rows of tiled windows.</summary>
            <description>Maximum rows of tiled windows.</description>
        </key>
        <key name="window-adjust-amount" type="u">
            <default>15</default>
            <summary>Window adjust amount.</summary>
            <description>Window adjust amount.</description>
        </key>
        <key name="original-size-mode" type="b">
            <default>true</default>
            <summary>Keep original window size when switched.</summary>
            <description>Keep original window size when switched.</description>
        </key>

        <!-- TILE KEYBIND -->
        <key name="tile-hotkey" type="as">
			<default><![CDATA[['<Ctrl><Super>W']]]></default>
			<summary>Tile windows opened in current workspace.</summary>
		</key>

        <!-- CNETER KEYBIND -->
        <key name="center-hotkey" type="as">
			<default><![CDATA[['<Shift><Super>W']]]></default>
			<summary>Centers windows opened in current workspace.</summary>
		</key>

        <!-- FOCUS KEYBIND -->
        <key name="focus-right-hotkey" type="as">
			<default><![CDATA[['<Shift><Super>L']]]></default>
			<summary>Focus right of current window.</summary>
		</key>
        <key name="focus-left-hotkey" type="as">
			<default><![CDATA[['<Shift><Super>H']]]></default>
			<summary>Focus left of current window.</summary>
		</key>
        <key name="focus-up-hotkey" type="as">
			<default><![CDATA[['<Shift><Super>K']]]></default>
			<summary>Focus up of current window.</summary>
		</key>
        <key name="focus-down-hotkey" type="as">
			<default><![CDATA[['<Shift><Super>J']]]></default>
			<summary>Focus down of current window.</summary>
		</key>

        <!-- SWITCH KEYBIND -->
        <key name="switch-right-hotkey" type="as">
			<default><![CDATA[['<Shift><Ctrl><Super>L']]]></default>
			<summary>Switch current window with right window.</summary>
		</key>
        <key name="switch-left-hotkey" type="as">
			<default><![CDATA[['<Shift><Ctrl><Super>H']]]></default>
			<summary>Switch current window with left window.</summary>
		</key>
        <key name="switch-up-hotkey" type="as">
			<default><![CDATA[['<Shift><Ctrl><Super>K']]]></default>
			<summary>Switch current window with up window.</summary>
		</key>
        <key name="switch-down-hotkey" type="as">
			<default><![CDATA[['<Shift><Ctrl><Super>J']]]></default>
			<summary>Switch current window with down window.</summary>
		</key>

        <!-- MOVE KEYBIND -->
        <key name="move-right-hotkey" type="as">
			<default><![CDATA[['<Ctrl><Super>L']]]></default>
			<summary>Move right the focused window.</summary>
		</key>
        <key name="move-left-hotkey" type="as">
			<default><![CDATA[['<Ctrl><Super>H']]]></default>
			<summary>Move left the focused window.</summary>
		</key>
        <key name="move-up-hotkey" type="as">
			<default><![CDATA[['<Ctrl><Super>K']]]></default>
			<summary>Move up the focused window.</summary>
		</key>
        <key name="move-down-hotkey" type="as">
			<default><![CDATA[['<Ctrl><Super>J']]]></default>
			<summary>Move down the focused window.</summary>
		</key>

        <!-- RESIZE KEYBIND -->
        <key name="shrink-x-hotkey" type="as">
			<default><![CDATA[['<Alt><Super>H']]]></default>
			<summary>Shrink focused window in X axis.</summary>
		</key>
        <key name="grow-x-hotkey" type="as">
			<default><![CDATA[['<Alt><Super>L']]]></default>
			<summary>Grow focused window in X axis.</summary>
		</key>
        <key name="shrink-y-hotkey" type="as">
			<default><![CDATA[['<Alt><Super>K']]]></default>
			<summary>Shrink focused window in Y axis.</summary>
		</key>
        <key name="grow-y-hotkey" type="as">
			<default><![CDATA[['<Alt><Super>J']]]></default>
			<summary>Grow focused window in Y axis</summary>
		</key>

        <!-- SNAPPER KEYBIND -->
        <key name="snap-right-hotkey" type="as">
			<default><![CDATA[['<Ctrl><Alt><Super>L']]]></default>
			<summary>Snap focused window right.</summary>
		</key>
        <key name="snap-left-hotkey" type="as">
			<default><![CDATA[['<Ctrl><Alt><Super>H']]]></default>
			<summary>Snap focused window left.</summary>
		</key>
        <key name="snap-up-hotkey" type="as">
			<default><![CDATA[['<Ctrl><Alt><Super>K']]]></default>
			<summary>Snap focused window up.</summary>
		</key>
        <key name="snap-down-hotkey" type="as">
			<default><![CDATA[['<Ctrl><Alt><Super>J']]]></default>
			<summary>Snap focused window down.</summary>
		</key>
    </schema>
</schemalist>