<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">
    <schema path="/org/gnome/shell/extensions/gtile/" id="org.gnome.shell.extensions.gtile">
        <key name="maximize-mode" type="b">
            <default>true</default>
            <summary>Maximize the first opened window.</summary>
            <description>Maximize the first opened window.</description>
        </key>
        <key name="ultra-wide-mode" type="b">
            <default>true</default>
            <summary></summary>
            <description>Vertically maximize first opened window in Maxmize Mode, else centers the window.</description>
        </key>
        <key name="window-tile-gap" type="u">
            <default>16</default>
            <summary>Window tile gaps</summary>
            <description>Window tile gaps.</description>
        </key>
        <key name="window-max-column-tiles" type="u">
            <default>4</default>
            <summary>Maximum columns of tiled windows.</summary>
            <description>Maximum columns of tiled windows.</description>
        </key>
        <key name="window-max-row-tiles" type="u">
            <default>2</default>
            <summary>Maximum rows of tiled windows.</summary>
            <description>Maximum rows of tiled windows.</description>
        </key>

        <!-- keybindings -->
        <key name="tile-hotkey" type="as">
			<default><![CDATA[['<Ctrl><Super>W']]]></default>
			 <summary>Tile windows opened in current workspace.</summary>
		</key>
        <key name="switch-right-hotkey" type="as">
			<default><![CDATA[['<Ctrl><Super>L']]]></default>
			 <summary>Switch for to right of focused window.</summary>
		</key>
        <key name="switch-left-hotkey" type="as">
			<default><![CDATA[['<Ctrl><Super>H']]]></default>
			 <summary>Switch for to left of focused window.</summary>
		</key>
        <key name="switch-up-hotkey" type="as">
			<default><![CDATA[['<Ctrl><Super>K']]]></default>
			 <summary>Switch for to up of focused window.</summary>
		</key>
        <key name="switch-down-hotkey" type="as">
			<default><![CDATA[['<Ctrl><Super>J']]]></default>
			 <summary>Switch for to down of focused window.</summary>
		</key>
    </schema>
</schemalist>